{
  "name": "flogo-zeebeworkflow-activity",
  "type": "flogo:activity",
  "version": "0.2.0",
  "title": "Codelity Flogo Zeebe Workflow Activity",
  "description": "Codelity Flogo Zeebe Workflow Activity",
  "homepage": "https://github.com/codelity-co/flogo-zeebeworkflow-activity",
  "settings": [
    {
      "name": "zeebeBrokerHost",
      "type": "string",
      "required": true
    },
    {
      "name": "zeebeBrokerPort",
      "type": "integer",
      "required": true
    },
    {
      "name": "bpmnProcessID",
      "type": "string",
      "required": true
    },
    {
      "name": "command",
      "type": "string",
      "required": true,
      "allowed": ["CreateWorkflowInstance", "CancelWorkflowInstance", "PublishMessage", "ResolveIncident", "CompleteJob", "FailJob"]
    },
    {
      "name": "usePlainTextConnection",
      "type": "boolean",
      "required": true,
      "default": true
    },
    {
      "name": "failJobRetries",
      "type": "integer",
      "required": false,
      "default": 5
    }
  ],
  "input": [
    {
      "name": "workflowInstanceKey",
      "type": "integer",
      "required": false
    },
    {
      "name": "messageName",
      "type": "string",
      "required": false
    },
    {
      "name": "messageCorrelationKey",
      "type": "string",
      "required": false
    },
    {
      "name": "messageTtlToLive",
      "type": "string",
      "required": false
    },
    {
      "name": "incidentKey",
      "type": "integer",
      "required": false
    },
    {
      "name": "jobKey",
      "type": "integer",
      "required": false
    },
    {
      "name": "data",
      "type": "object",
      "required": true
    }

  ],
  "output": [
    {
      "name": "status",
      "type": "text",
      "required": true
    },
    {
      "name": "result",
      "type": "any"
    }
  ]
}
